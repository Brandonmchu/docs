{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Every",
  "css": "custom.css",
  "colors": {
    "primary": "#edece8",
    "light": "#6B6A68",
    "dark": "#0A0A0A"
  },
  "font": {
    "family": "Inter",
    "weight": 400,
    "heading": {
      "family": "Inter",
      "weight": 600
    }
  },
  "background": {
    "color": {
      "light": "#edece8",
      "dark": "#0A0A0A"
    }
  },
  "appearance": {
    "default": "light"
  },
  "styling": {
    "eyebrows": "breadcrumbs",
    "codeblocks": "system"
  },
  "icons": {
    "library": "lucide"
  },
  "primaryTab": {
    "name": "Product Guide"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Product Guide",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "index",
              "quickstart",
              "getting-started/organization-setup"
            ]
          },
          {
            "group": "Core Features",
            "pages": [
              "features/clients",
              "features/offerings",
              "features/invoices",
              "features/payments",
              "features/automations",
              "features/proposals",
              "features/time-tracking",
              "features/expenses"
            ]
          },
          {
            "group": "Advanced Features",
            "pages": [
              "advanced/note-templates",
              "advanced/multi-currency",
              "advanced/tax-management",
              "advanced/reporting"
            ]
          },
          {
            "group": "AI Features",
            "pages": [
              "ai/every-agent",
              "ai/agent-scheduled-tasks",
              "ai/business-context"
            ]
          },
          {
            "group": "Workflows & Best Practices",
            "pages": [
              "workflows/common-workflows",
              "workflows/tips-for-success"
            ]
          }
        ]
      },
      {
        "tab": "Integrations",
        "groups": [
          {
            "group": "Payment Processing",
            "pages": [
              "integrations/stripe"
            ]
          },
          {
            "group": "Business Tools",
            "pages": [
              "integrations/google-workspace",
              "integrations/hubspot"
            ]
          }
        ]
      },
      {
        "tab": "Support",
        "groups": [
          {
            "group": "Help & Resources",
            "pages": [
              "troubleshooting"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Launch App",
          "href": "https://every.ai",
          "icon": "rocket"
        },
        {
          "anchor": "Contact Support",
          "href": "mailto:hello@every.ai",
          "icon": "mail"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/every_logo2.png",
    "dark": "/logo/every_logo2.png"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:hello@every.ai"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Login",
      "href": "https://every.ai"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "cursor"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/everyai",
      "linkedin": "https://linkedin.com/company/every-ai"
    }
  }
}
